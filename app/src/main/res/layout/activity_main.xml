<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.supremeruler.simonsays.MainActivity">

    <!--Field Labels-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Text that says "Time (seconds)"-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Time"
            android:layout_weight="1"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"/>
        <!--Text that says "Score"-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Score"
            android:layout_weight="1"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"/>

    </LinearLayout>

    <!--Fields-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Text that shows the time left-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:text="0"
            android:id="@+id/time"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"/>
        <!--Text that shows the score-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/score"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

    <!--First row of buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffaad7"
            android:id="@+id/Button1"
            android:onClick="onClick"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#aad7ff"
            android:id="@+id/Button2"
            android:onClick="onClick"
            />

    </LinearLayout>

    <!--Second row of buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d2aaff"
            android:id="@+id/Button3"
            android:onClick="onClick"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d7ffaa"
            android:id="@+id/Button4"
            android:onClick="onClick"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:id="@+id/simonSays"
        android:text="Tap any button to start the game."/>

</LinearLayout>
